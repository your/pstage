<div class="row">
	<div class="col-xs-6 col-sm-4"></div>
	<div class="col-xs-6 col-sm-4 text-center">
		<h1>Modifica Sede</h1>
	</div>
	<!-- Optional: clear the XS cols if their content doesn't match in height -->
	<div class="clearfix visible-xs-block"></div>
	<div class="col-xs-6 col-sm-4"></div>
</div>
<br><br>
<div class="row">
	<div class="col-xs-6 col-sm-4"></div>
	<div class="col-xs-6 col-sm-4">
		<%= form_for(@office) do |f| %>
			<div class="form-group">
				<%= f.label :partner, class:'h2' %>
				<p class="form-control-static"><%= @partner.name %></p>
			</div>
			<div class="form-group">
				<%= f.label :address, 'Indirizzo completo', class:'h3' %>
				<%= f.text_field :address, class: 'form-control', id: 'gmaps-input-address' %>
			</div>
			<%= f.submit "Salva Modifica", class: "btn btn-primary" %>
		<% end %>
	</div>
	<!-- Optional: clear the XS cols if their content doesn't match in height -->
	<div class="clearfix visible-xs-block"></div>
	<div class="col-xs-6 col-sm-4"></div>
</div>